---
import { cn } from '../utils/tailwind'

interface AnchorProps extends astroHTML.JSX.AnchorHTMLAttributes {
  showUrl?: boolean
}
type Props = AnchorProps
const { showUrl = false, class: className, ...props} = Astro.props
---
<a {...props}
  class={cn(
    {
      'show-url': showUrl
    },
    "inline-flex gap-ch items-center text-blue hover:underline",
    className
  )}>
  <slot />
</a>
<style>
a::before {
  content: '[ ';
}
a::after {
  content: ' ]';
}
a.show-url::after {
  content: ' ](' attr(href) ')';
}
</style>
